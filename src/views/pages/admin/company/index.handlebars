 <div class="row">
            <div class="col-md-12 stretch-card">
              <div class="card">
                <div class="card-body">
                  <p class="card-title">Customers</p>
                  <div class="table-responsive">
                    <table id="recent-purchases-listing" class="table">
                      <thead>
                        <tr>
                            <th>Logo</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone number</th>
                            <th>Address</th>
                            <th>Action</th>
                        </tr>
                      </thead>
                      <tbody>
                         {{#each companies}}
                        <tr>
                          <td><img src="http://localhost:3001/{{this.logo}}" width="80" height="80"></td>
                          <td>{{this.name}}</td>
                          <td>{{this.email}}</td>
                          <td>{{this.phone_number}}</td>
                          <td>{{this.address}}</td>
                          <td><a href="/admin/companies/update/{{this.id}}">Edit</a> <a href="/admin/companies/delete/{{this.id}}">Delete</a></td>
                        </tr>
                        {{/each}}
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
